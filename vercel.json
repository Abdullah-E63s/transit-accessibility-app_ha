{
    "version": 2,
    "name": "transit-accessibility-app",
    "builds": [
        {
            "src": "transit_webapp/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/transit_webapp/build/static/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/transit_webapp/build/favicon.ico"
        },
        {
            "src": "/manifest.json",
            "dest": "/transit_webapp/build/manifest.json"
        },
        {
            "src": "/(.*)",
            "dest": "/transit_webapp/build/index.html"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
                }
            ]
        }
    ],
    "env": {
        "GEMINI_API_KEY": "@gemini_api_key"
    }
}